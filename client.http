        // "exact": "Mário Monteiro"
        "exact": "+351936202288",
        // must contain string
        "includes": "Má",
        // must match regex, warn for escaped slashes
        "regex": "\\b(\\w*koakh\\w*)\\b"
      }
    },
    // {
    //   "dn": {
    //     // "regex": "\\.*,OU=School2,OU=People,DC=c3edu,DC=online$\\b"
    //     // pass case insensitivity
    //     "regex": "\\.*,ou=school2,ou=people,dc=c3edu,dc=online$\\b",
