    //   }
    // },
    // {
    //   "displayName": {
    //     "exact":"mario monteiro"
    //   }
    // },
    {
      // special property, must search in memberOf array
      "memberOf": {
        // c3
        // "exact": "CN=C3Administrator,OU=Profiles,OU=Groups,DC=c3edu,DC=online"
